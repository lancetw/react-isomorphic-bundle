{
  "development": {
    "timezone": "Asia/Taipei",
    "storage": "storage/db.development.sqlite",
    "dialect": "sqlite",
    "omitNull": true,
    "dialectOptions": {
      "supportBigNumbers": true,
      "bigNumberStrings": true
    },
    "migrationStorage": "json",
    "migrationStoragePath": "storage/meta-development.json",
    "define": {
      "timestamps": true,
      "freezeTableName": true,
      "paranoid": true,
      "underscored" : true,
      "charset": "utf8",
      "collate": "utf8_general_ci"
    },
    "logging": false
  },
  "test": {
    "storage": "storage/db.test.sqlite",
